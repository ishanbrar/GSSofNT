---
import { menuLinks, siteConfig } from "@/site.config";

const year = new Date().getFullYear();
---

<footer
    class="semibold mt-auto flex w-full flex-col items-center justify-start gap-y-2 pb-4 pt-8 text-center align-top text-accent sm:flex-row sm:justify-start sm:text-sm"
>
    <div class="me-0 font-semibold sm:me-4">
        &copy; {siteConfig.author} {year}.<span class="inline-block">&nbsp;&nbsp;GSS of North Texas</span>
    </div>
    <nav
        aria-label="More on this site"
        class="flex justify-start space-x-4 font-medium text-light md:w-auto w-auto"
    >
        {
            menuLinks.map((link) => (
                <a class="underline-offset-2 hover:text-accent hover:underline" href={link.path}>
                    {link.title}
                </a>
            ))
        }
        <!-- Add Contact Us Button -->
        <a
            href="/contact"
            class="underline-offset-2 hover:text-accent hover:underline"
        >
            Contact Us
        </a>
    </nav>
</footer>