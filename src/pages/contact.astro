---
import PageLayout from "@/layouts/Base.astro";

const meta = {
    description: "Contact GSS of NT",
    title: "Contact/Donate",
};
---

<PageLayout meta={meta}>
    <div class="prose prose-citrus max-w-none">
        <h1 class="title mb-6">Contact and Donate</h1>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <!-- Contact Information Section -->
            <div class="space-y-6">
                <h2 class="text-xl font-bold mb-4">Connect With Us</h2>
                <div class="space-y-3">
                    <p class="flex items-center gap-2">
                        <span class="font-medium">Phone:</span>
                        <a href="tel:+19722353388" class="text-accent-one hover:text-accent-two">
                            (972) 235-3388
                        </a>
                    </p>
                    <p class="flex items-center gap-2">
                        <span class="font-medium">Email:</span>
                        <a href="mailto:contact@GSSofNT.com" class="text-accent-one hover:text-accent-two">
                            contact@GSSofNT.com
                        </a>
                    </p>
                    <p class="flex items-center gap-2">
                        <span class="font-medium">Instagram:</span>
                        <a href="https://instagram.com/GSSofNT" target="_blank" rel="noopener noreferrer" class="text-accent-one hover:text-accent-two">
                            @GSSofNT
                        </a>
                    </p>
                    <p class="flex items-center gap-2">
                        <span class="font-medium">Location:</span>
                        <a 
                            href="https://www.google.com/maps?client=safari&sca_esv=4edcfc4bd6863fc2&rls=en&biw=985&bih=527&sxsrf=AHTn8zorRk3vWWmrsArERwfM8y49doJbcQ:1744409337156&kgmid=/g/1tvm34_3&shndl=30&shem=lcuae,uaasie&kgs=1ef1142634cebc05&um=1&ie=UTF-8&fb=1&gl=us&sa=X&geocode=KRd2Q2mRH0yGMZHXVhvqrtWL&daddr=1201+Abrams+Rd,+Richardson,+TX+75081" 
                            target="_blank" 
                            rel="noopener noreferrer" 
                            class="text-accent-one hover:text-accent-two"
                        >
                            1201 Abrams Rd, Richardson, TX 75081
                        </a>
                    </p>
                </div>
            </div>
        </div>
    </div>
    <!-- Image Section -->
<div class="grid grid-cols-1 md:grid-cols-2 gap-4 mt-8">
    <img 
        src="/assets/images/FrontName.jpg" 
        alt="Image 1 description" 
        class="w-full h-auto rounded-lg shadow-lg"
    />
    <img 
        src="/assets/images/Langar.jpg" 
        alt="Image 2 description" 
        class="w-full h-auto rounded-lg shadow-lg"
    />
</div>
</PageLayout>