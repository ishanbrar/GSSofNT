---
import PageLayout from "@/layouts/Base.astro";

const meta = {
    description: "Learn about the Sikhi Camp and sign up to participate.",
    title: "Sikhi Camp - July 4th Weekend 2025",
};
---

<PageLayout meta={meta}>
    <div class="mb-8">
        <h1 class="text-3xl font-bold mb-6 text-center">Sikhi Camp</h1>
        
        <div class="mb-8">
            <p class="text-lg mb-6 text-center">
                Join us for Sikhi Camp this July 4th weekend at Gurdwara Singh Sabha Richardson. July 4th - July 6th, 2025.
            </p>
        </div>

        <!-- Signup Form Section -->
        <!-- Signup Form Section -->
         <!-- Signup Form Section -->
<div class="mb-8">
    <h2 class="text-2xl font-bold mb-4 text-center">Sign Up</h2>
    <form
        action="https://formspree.io/f/mdkzaqjq"
        method="POST"
        class="space-y-6 max-w-md mx-auto"
    >
        <!-- Name Field -->
        <div>
            <label for="name" class="block text-lg font-medium text-gray-700 mb-2">
                Name
            </label>
            <input 
                type="text" 
                id="name" 
                name="name" 
                required 
                class="w-full rounded-md border-gray-300 shadow-sm focus:border-accent-one focus:ring-accent-one"
            />
        </div>

        <!-- Email Field -->
        <div>
            <label for="email" class="block text-lg font-medium text-gray-700 mb-2">
                Your Email
            </label>
            <input 
                type="email" 
                id="email" 
                name="email" 
                required 
                class="w-full rounded-md border-gray-300 shadow-sm focus:border-accent-one focus:ring-accent-one"
            />
        </div>

        <!-- Submit Button -->
        <div class="flex justify-center">
            <button 
                type="submit" 
                class="px-6 py-3 text-lg font-semibold text-white bg-accent rounded-lg hover:bg-accent-dark transition-all"
            >
                Sign Up
            </button>
        </div>
    </form>
</div>
    </div>
</PageLayout>